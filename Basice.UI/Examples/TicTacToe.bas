10 CLS
20 DIM B$(9):TURN = 1
30 FOR X=1 TO 9:B$(X) = STR$(X) : Next
40 GOSUB 1000
50 GOSUB 3000
999 END
1000 ' Draw Tic-Tac-Toe board
1009 CURSOR OFF
1010 FOR Y=5 TO 9 STEP 2
1020 LOCATE Y,10
1030 PRINT "|"
1040 LOCATE Y,12
1050 PRINT "|"
1060 NEXT
1070 FOR X=9 TO 13
1080 LOCATE 6,X
1090 PRINT "-"
1100 LOCATE 8,X
1110 PRINT "-"
1120 NEXT
1130 GOSUB 2000
1140 CURSOR ON:Return
2000 ' Draw X's and O's
2010 FOR X=1 TO 3
2020 LOCATE 5,X * 2 + 7
2030 PRINT B$(X)
2040 NEXT
2050 FOR X=4 TO 6
2060 LOCATE 7,X*2 + 1
2070 PRINT B$(X)
2080 NEXT
2090 FOR X=7 TO 9
2100 LOCATE 9,X*2 - 5
2110 PRINT B$(X)
2120 NEXT
3000 ' Draw prompt
3010 LOCATE 11,3
3020 IF TURN=1 THEN PRINT "It's X's"; ELSE PRINT "It's O's";
3030 PRINT " turn. Press a number to claim that space!"
3040 RETURN